{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      // Launch Edge pointed at the Vite dev server
      "type": "msedge",
      "request": "launch",
      "name": "Edge: client-side debug",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      // Start Edge with a temporary profile (avoids profile lock issues)
      "userDataDir": true,
      // Explicit Edge path â€” update if needed on your machine
      "runtimeExecutable": "C:\\Program Files (x86)\\Microsoft\\Edge\\Application\\msedge.exe",
      // Enable verbose logs if it still fails
      "trace": true
    },
    {
      // Starts `react-router dev` in an integrated terminal
      "name": "React Router: dev server",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev"
    }
  ],
  "compounds": [
    {
      "name": "Debug: Edge + Dev Server",
      "configurations": [
        "React Router: dev server",
        "Edge: client-side debug"
      ]
    }
  ]
}
